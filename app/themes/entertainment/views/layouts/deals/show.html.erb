<!DOCTYPE html>
<html>
<head>
  <title><%= @deal.proposition %></title>
 
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->


  <%= stylesheet_link_tag    "bootstrap", :media => "all" %>
  <%= stylesheet_link_tag    "entertainment/assets/#{@deal.advertiser.publisher.theme}/stylesheets/deals", :media => "all" %>

  <script type="text/javascript">
    var aaDealPath = '<%= deal_path @deal, :format => "json" %>';
  </script>

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>

</head>

<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#"><%= entertainment_title(@deal) %></a>
      </div>
    </div>
  </div>

    <div class="container">
      <% if flash[:warn].present? %>
        <%= render "shared/flash", flash_info: flash[:warn], flash_class: "warning" %>
      <% end %>

      <% if flash[:notice].present? %>
        <%= render "shared/flash", flash_info: flash[:notice], flash_class: "success" %>
      <% end %>

      <%= yield %>

      <footer>
        <p><%= entertainment_title(@deal) %></p>
      </footer>

    </div> <!-- /container -->
</body>
</html>
